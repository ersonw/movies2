{
  "name": "movies2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "bundle-ios": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ios/bundle/main.jsbundle --assets-dest ios/bundle",
    "push-ios": "code-push release-react Movies2Ios ios -d Production",
    "pod-ios": "cd ios && pod deintegrate && pod install && cd ..",
    "push-android": "code-push release-react Movies2Android android -d Production",
    "build-android": "cd android && ./gradlew assembleRelease && cd .."
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.12.1",
    "@react-navigation/bottom-tabs": "^6.4.0",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/native-stack": "^6.9.0",
    "openinstall-react-native": "git+https://github.com/ersonw/openinstall-react-native.git",
    "react": "18.1.0",
    "react-native": "0.70.2",
    "react-native-code-push": "git+https://github.com/ersonw/react-native-code-push.git",
    "react-native-fs": "^2.20.0",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.0",
    "react-native-vector-icons": "^9.2.0",
    "react-native-webrtc": "^106.0.0-beta.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
